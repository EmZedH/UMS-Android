<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_primaryContainer">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        >

        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/universityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="@string/universityString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                />

            <TextView
                android:id="@+id/managementTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="@string/managementString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/systemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/systemString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                />

            <EditText
                android:id="@+id/userIDEditText"
                android:layout_width="330dp"
                android:layout_height="48dp"
                android:autofillHints="User ID"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/userIDString"
                android:inputType="text"
                android:textColorHint="@color/light_outlineVariant"
                android:textSize="16sp"
                android:textStyle="italic"

                android:padding="14dp"
                android:layout_gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="330dp"
                android:layout_height="48dp"
                android:autofillHints="Password"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/passwordString"
                android:inputType="textPassword"
                android:textColorHint="@color/light_outlineVariant"
                android:textSize="16sp"
                android:textStyle="italic"

                android:padding="14dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="5dp"
                />


            <android.widget.Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_login_button"
                android:text="@string/loginString"
                android:textColor="@color/light_onPrimary"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/textViewUserIDPasswordNotCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_light"
                android:text=""
                android:textColor="@color/light_error"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal|bottom"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
