<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_primaryContainer"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"

            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/universityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/universityString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/managementTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="@string/managementString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/systemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/systemString"
                android:textColor="@color/light_primary"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/userIDEditText"
                android:layout_width="330dp"
                android:layout_height="48dp"
                android:autofillHints="User ID"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/userIDString"
                android:inputType="text"
                android:textColorHint="@color/light_outlineVariant"
                android:textSize="16sp"
                android:textStyle="italic"

                android:padding="14dp"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="330dp"
                android:layout_height="48dp"
                android:autofillHints="Password"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/passwordString"
                android:inputType="textPassword"
                android:textColorHint="@color/light_outlineVariant"
                android:textSize="16sp"
                android:textStyle="italic"

                android:padding="14dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                />


            <android.widget.Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_login_button"
                android:text="@string/loginString"
                android:textColor="@color/light_onPrimary"

                android:layout_marginTop="90dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/textViewUserIDPasswordNotCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_light"
                android:text=""
                android:textColor="@color/light_error"
                android:textSize="18sp"

                android:layout_marginTop="20dp"
                android:layout_gravity = "center_horizontal"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
