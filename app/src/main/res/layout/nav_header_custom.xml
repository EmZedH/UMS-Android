<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/header_welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hi_string"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/light_onSurface"
        />
    <TextView
        android:id="@+id/header_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_id_string"
        android:textSize="20sp"
        android:textColor="@color/light_onSurface"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>