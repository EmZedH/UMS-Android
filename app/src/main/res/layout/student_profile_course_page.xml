<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.appbar.MaterialToolbar

            android:id="@+id/top_app_bar"
            app:title="@string/student_course_records_string"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/light_surface"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/light_onSurface"
            app:titleTextColor="@color/light_onSurface"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/scroll_view_of_profile_page_string"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_layout"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:id="@+id/person_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_book_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/person_image_string"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/course_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/person_image"
                android:textSize="30sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/attendance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attendance_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@id/course_name_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/attendance_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/internal_marks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/internal_marks_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/attendance"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/internal_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/internal_marks_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/external_marks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/external_marks_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/internal_marks"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/external_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/external_marks_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/assignment_marks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assignment_marks_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/external_marks"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/assignment_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/assignment_marks_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/course_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/assignment_marks"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/course_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/course_status_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/professor_details_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/professor_details_string"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/course_status"
                android:textSize="25sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/professor_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/professor_details_string"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/professor_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/professor_id_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

            <TextView
                android:id="@+id/professor_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_heading_string"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/professor_id"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />
            <TextView
                android:id="@+id/professor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/professor_name_text_view"
                android:textSize="20sp"
                android:textColor="@color/light_onSurface"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>